.tomato-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tomato-container text {
  color: #fff;
  font-size: 30rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

image {
  width: 360rpx;
  height: 360rpx;
}

.active {
  opacity: 0.9;
}